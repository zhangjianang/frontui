<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ang.frontui.mapper.DailyTaskMapper">
    <select id="findAll"  resultType="com.ang.frontui.bean.DailyTask">
        select * from daily_task
    </select>
    <select id="findById"  resultType="com.ang.frontui.bean.DailyTask" parameterType="java.lang.Integer">
        select * from daily_task where id = #{id}
    </select>

    <insert id="addOne" parameterType="com.ang.frontui.bean.DailyTask"  keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        insert into daily_task (task_name ,category,elapse,actual,date,reason) values
        (#{taskName},#{category},#{elapse},#{actual},#{date},#{reason})
    </insert>

    <update id="updateById" parameterType="com.ang.frontui.bean.DailyTask">
        update daily_task set task_name=#{taskName},category=#{category},elapse=#{elapse},actual=#{actual}, date=#{date} ,reason=#{reason} where id=#{id}
    </update>

